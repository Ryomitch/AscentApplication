<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ProblemHelpDialogCL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ProblemHelpLeftMarginGuideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ProblemHelpRightMarginGuideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/ProblemHelpDialogTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m"
        android:text="@string/problem_help_title_text"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintLeft_toLeftOf="@id/ProblemHelpLeftMarginGuideline"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ProblemHelpCloseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:text="@string/close_btn_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ProblemHelpPointsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/problem_help_points_text"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/ProblemHelpLeftMarginGuideline"
        app:layout_constraintTop_toBottomOf="@id/ProblemHelpDialogTitleTV"
        app:layout_constraintRight_toRightOf="@id/ProblemHelpRightMarginGuideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constrainedWidth="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>